<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewbaihathot"
        android:scaleType="fitXY"
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Khong The Say"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/textviewtitlebaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="HIEUTHUHAI"
        android:textSize="16sp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageviewbaihathot"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/textviewtitlebaihathot"
        android:id="@+id/textviewtencasibaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/icon_heart_24_ic8"
        android:layout_marginRight="10dp"
        android:id="@+id/imageviewluotthich"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="24sp"
        android:layout_height="24sp"/>

</RelativeLayout>