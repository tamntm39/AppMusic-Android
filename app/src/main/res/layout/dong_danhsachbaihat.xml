<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textviewtenbaihat"
            android:textSize="20sp"
            android:text="Khong The Say"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="#979797"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:text="HIEUTHUHAI"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:layout_below="@id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_heart_24_ic8"
            android:layout_marginRight="10dp"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="24sp"
            android:layout_height="24sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>