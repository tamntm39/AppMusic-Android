<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageviewbackgroundplaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/custom_background_banner" />

    <ImageView
        android:id="@+id/imageviewplaylist"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/imageviewbackgroundplaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-42dp"
        android:elevation="6dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/textviewtenplaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageviewplaylist"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="7dp"
        android:layout_toRightOf="@+id/imageviewplaylist"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="chao cac cau da vao source "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>