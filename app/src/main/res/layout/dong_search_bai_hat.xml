<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_margin="4dp"
        android:scaleType="fitXY"
        android:id="@+id/imgSearchHinhBaiHat"
        android:layout_height="80dp">
    </ImageView>
    <TextView
        android:singleLine="true"
        android:maxWidth="250dp"
        android:textSize="18sp"
        android:id="@+id/txtSearchTenBaiHat"
        android:textColor="@color/black"
        android:text="Khong The Say"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imgSearchHinhBaiHat"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:singleLine="true"
        android:maxWidth="250dp"
        android:textSize="16sp"
        android:id="@+id/txtSearchTenCaSi"
        android:layout_below="@+id/txtSearchTenBaiHat"
        android:textColor="@color/black"
        android:text="HIEUTHUHAI"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imgSearchHinhBaiHat"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/icon_heart_24_ic8"
        android:layout_marginRight="10dp"
        android:id="@+id/imageviewSeachLuotThich"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="24sp"
        android:layout_height="24sp"/>

</RelativeLayout>